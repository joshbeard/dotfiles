# This tmux statusbar config was created by tmuxline.vim
# on Sun, 16 Mar 2014

set -g status-bg 'colour234'
set -g message-command-fg 'colour231'
set -g status-justify 'left'
set -g status-left-length '100'
set -g status 'on'
set -g pane-active-border-fg 'colour254'
set -g message-bg 'colour31'
set -g status-right-length '100'
set -g status-right-attr 'none'
set -g message-fg 'colour231'
set -g message-command-bg 'colour31'
set -g status-attr 'none'
set -g status-utf8 'on'
set -g pane-border-fg 'colour157'
#set -g pane-border-bg ''
set -g status-left-attr 'none'
setw -g window-status-fg 'colour244'
setw -g window-status-bg 'colour234'
setw -g window-status-attr 'none'
setw -g window-status-activity-bg 'colour237'
setw -g window-status-activity-attr 'none'
setw -g window-status-activity-fg 'colour208'
setw -g window-status-separator '▏'
set -g status-left '#[fg=colour000,bg=colour251,bold] #S/#P #[fg=colour251,bg=colour000,nobold,nounderscore,noitalics]'
set -g status-right '#[fg=colour236,bg=colour234,nobold,nounderscore,noitalics]#[fg=colour247,bg=colour236]▏ %Y-%m-%d ◆ %H:%M ◆ #[fg=colour155,bg=colour236]#(/usr/bin/pmset -g batt | ~/bin/batt.rb)#[fg=colour247,bg=colour236] ◆ #h '
#setw -g window-status-format '#[fg=colour244,bg=colour234] #I :#[fg=colour250,bg=colour234] #W '
setw -g window-status-format '▷ #I: #W '
setw -g window-status-current-format '#[fg=colour234,bg=colour4,nobold,nounderscore,noitalics]#[fg=colour255,bg=colour25]▶ #I: #[fg=colour231,bg=colour025,bold]#W #[fg=colour4,bg=colour234,nobold,nounderscore,noitalics]'
